{%- style -%}
    @media screen and (max-width: 749px) {
      #Text-button-{{ section.id }}{
        padding-top: {{ section.settings.padding_top_mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile}}px;
      }
    }

    @media screen and (min-width: 750px) {
      #Text-button-{{ section.id }}{
        padding-top: {{ section.settings.padding_top_desktop }}px;
        padding-bottom: {{ section.settings.passing_bottom_desktop }}px;
      }
    }

    
  {%- endstyle -%}
  <div id="Text-button-{{ section.id }}">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when "text" -%}
          {%- style -%}
            @media screen and (max-width: 749px) {
              #Text-block-{{ block.id }}{
                font-size: {{ block.settings.fontsize_mobile }}px;
                text-align: {{ block.settings.alignment_mobile }};
              }
            }
        
            @media screen and (min-width: 750px) {
              #Text-block-{{ block.id }}{
                font-size: {{ block.settings.fontsize_desktop }}px;
                text-align: {{ block.settings.alignment_desktop }};
              }
            }
          {%- endstyle -%}
          <div id="Text-block-{{ block.id }}">
            <p>{{ block.settings.text }}</p>
          </div>
        {%- when "buttons" -%}
          {%- style -%}
            @media screen and (max-width: 749px) {
              #Button-block-{{ block.id }}{
                font-size: {{ block.settings.fontsize_mobile }}px;
                text-align: {{ block.settings.alignment_mobile }};
              }
            }
        
            @media screen and (min-width: 750px) {
              #Button-block-{{ block.id }}{
                font-size: {{ block.settings.fontsize_desktop }}px;
                text-align: {{ block.settings.alignment_desktop }};
              }
            }
          {%- endstyle -%}
          <a id="Button-block-{{ block.id }}" href="{{ block.settings.button_link }}" class="button button--secondary">{{ block.settings.text }}</a>
      {%- endcase -%}
    {%- endfor -%}
  </div>
{% schema %}
  {
    "name": "t:sections.text-button.name",
    "settings": [
      {
          "type": "header",
          "content": "t:sections.text-button.settings.desktop_padding.content"
      },
      {
        "type": "number",
        "id": "padding_top_desktop",
        "label": "t:sections.text-button.settings.padding_top_desktop",
        "default": 5,
      },
      {
        "type": "number",
        "id": "padding_bottom_desktop",
        "label": "t:sections.text-button.settings.padding_bottom_desktop",
        "default": 5,
      },
      {
          "type": "header",
          "content": "t:sections.text-button.settings.mobile_padding.content"
      },
      {
        "type": "number",
        "id": "padding_top_mobile",
        "label": "t:sections.text-button.settings.padding_top_mobile",
        "default": 5,
      },
      {
        "type": "number",
        "id": "padding_bottom_mobile",
        "label": "t:sections.text-button.settings.padding_bottom_mobile",
        "default": 5,
      }
    ],
    "blocks": [
      {
      "type": "text",
      "name": "t:sections.text-button.blocks.text.name",
      "limit": 2,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "t:sections.text-button.blocks.text.settings.text.label"
        },
        {
          "type": "header",
          "content": "t:sections.text-button.blocks.text.settings.desktop_settings.content"
