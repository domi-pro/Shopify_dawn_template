          "content": "t:sections.text-button.blocks.text.settings.mobile_settings.content"
        },
        {
          "type": "number",
          "id": "fontsize_mobile",
          "label": "t:sections.text-button.blocks.text.settings.fontsize_mobile.label",
        },
        {
         "type": "text_alignment",
         "id": "alignment_mobile",
         "label": "t:sections.text-button.blocks.text.settings.alignment_mobile.label",
         "default": "left"
